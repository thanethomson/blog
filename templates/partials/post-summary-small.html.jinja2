<h4><a href="{% url "posts", post %}">{{ post.title }}</a></h4>
<div class="meta">
  <b>{{ post.date|date("%d %b %Y") }}</b>
  &nbsp;
  <i class="fa fa-tags"></i> {% include "partials/post-tags.html.jinja2" %}
</div>
<div class="partial-post">
  {% if post.summary %}
    {{ post.summary }}
  {% else %}
    {{ post.content|safe|striptags|truncate(300) }}
  {% endif %}
  <a class="read-more" href="{% url "posts", post %}">
    Read more
  </a>
</div>
